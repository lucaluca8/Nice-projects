<Window x:Class="Tema1V2.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema1V2"
        mc:Ignorable="d"
        Title="DialogBox" Height="200" Width="200">
    <StackPanel Margin="5,5,5,5">
        <TextBlock Name="Title" Margin="0,0,0,10" />
        <TextBox Name="Input" Padding="3,3,3,3" Text="Input"/>
        <TextBox Name="Response" Padding="4,4,4,4" Text="Response"/>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="Ok" Content="OK" Grid.Column="0" Margin="0,0,5,0" Padding="8" Click="OKButton_Click" />
        </Grid>
    </StackPanel>
</Window>
